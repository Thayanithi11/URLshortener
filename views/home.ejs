<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL shortener</h1>
    <% if (locals.id) { %>
      <p>URL Generated: <a href="http://localhost:8001/url/<%= locals.id %>">ShortenedURL</a></p>
    <% } %>
    <div>
        <form method="POST" action="/url">
            <label>Enter your Original URL: </label>
            <input type="text"
              name="url"
              placeholder="https://example.com"
              />
              <br/>
              <br/>
              <button type="submit">Generate</button>
        </form>
    </div>
    <br/>
    <div>
        <% if (locals.urls) { %>
          <table>
            <thead>
                <th>S.No</th>
                <th>ShortID</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((urls,index) => { %>
                   <tr>
                    <td><%= index+1 %></td>
                   <td><%= urls.shortId %></td>
                   <td><%= urls.redirectURL%></td>
                   <td><%= urls.visitHistory.length%></td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        <% } %>
    </div>
</body>
</html>